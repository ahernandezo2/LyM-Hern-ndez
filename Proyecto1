
archivo = open("archivo.txt","r")
contenido = archivo.read()# retorna todo el contenido del archivo como un String
lista_contenido = contenido.split(",")# retorna el String anterior como una lista

def validar_parentesis(lista_contenido):
    """
    Esta función valida si los paréntesis del archivo son todos correspondidos
    """
    contador_abrir = 0
    contador_cerrar = 0

    for a in len(lista_contenido):
        if a == "(":
            contador_abrir += 1

    for c in len(lista_contenido):
        if c == ")":
            contador_cerrar += 1

    if contador_abrir == contador_cerrar:
        rta = True
    else:
        rta = False
    
    return rta

if rta == False:
    print("no")
